@model BugHound.Models.StatusChangeViewModel

<h4>Status Change for: <strong>@ViewBag.TicketTitle</strong> </h4>
<h4>@ViewBag.SCMessage</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.TicketId)


        <div class="form-group">
            @*@Html.LabelFor(x => x.Comment, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Status Change Comment</label>
            <div class="col-md-10">
                @Html.TextAreaFor(x => x.Comment, new { @class = "wide-400", @cols = 89, @rows = 3 })
                @Html.ValidationMessageFor(x => x.Comment, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(x => x.StatusId, "StatusId", htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Select Status</label>
            <div class="col-md-10">
                @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.StatusId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <p>
        <nav>
            <ul class="pager">
                <li class="previous"><a href="@ViewBag.PreviousPage" class="previous">&larr; Return</a></li>
            </ul>
        </nav>
    </p>
</div>

