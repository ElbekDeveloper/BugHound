@using Microsoft.AspNet.Identity
@model IEnumerable<BugHound.Models.Ticket>


@{
    ViewBag.Title = "Home Page";
}
@*
    <div class="jumbotron">
        <h1>BugHound</h1>

        <img src="~/img/theBugHound.jpg" width="30%" />
    </div>
*@
<h1>BugHound</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">

            <img src="~/img/theBugHound.jpg" width="80%" />
        </div>
        <div class="col-md-8 bg-info">
            <div class="row">
                @if (User.IsInRole("Administrator"))
                {
                    @Html.Partial("AdministratorPartial")
                }
                @if (User.IsInRole("Project Manager"))
                {
                    @Html.Partial("ProjectManagerPartial")
                }
                @if (User.IsInRole("Developer"))
                {
                    @Html.Partial("DeveloperPartial")
                }
                @if (User.IsInRole("Support"))
                {
                    @Html.Partial("SupportPartial")
                }
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="row">
                    <br />
                </div>
                <div class="row">
                    <div class="col-md-4 ">
                        <div class="padded-15">
                            <strong>Your Top 5 Tickets:</strong>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <table class="table table-bordered table-striped">
                            <tr >
                                <th>
                                    Ticket
                                </th>
                                <th>
                                    Priortity
                                </th>
                                <th>
                                    Project
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                if (item.Priority.Name == "Critical")
                                {
                                    <tr class="danger">
                                        <td>
                                            @*@Html.DisplayFor(modelItem => item.Title)*@
                                            @Html.ActionLink(item.Title, "../Tickets/Details", new { id = item.Id })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Priority.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Project.Name)
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink(item.Title, "../Tickets/Details", new { id = item.Id })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Priority.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Project.Name)
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                    <div class="row padded-15">
                        <div class="col-md-12"><br /></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class=" footer">
                                <p>BugHound Bug Tracker</p>
                            </div>
                        </div>
                    </div>

                </div>
            }
            else
            {
                <div class="row padded-15">
                    <p>Welcome to BugHound, please login.</p>
                </div>
            }
        </div>
    </div>

</div>
